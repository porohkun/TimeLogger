<UserControl x:Class="TimeLogger.DayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeLogger"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Right" Width="16" Click="InfoButton_Click">
                <Image Source="/Resources/info.png"/>
            </Button>
            <Button DockPanel.Dock="Right" Width="16" Click="EditButton_Click">
                <Image Source="/Resources/pencil.png"/>
            </Button>
        <TextBlock x:Name="dayText" DockPanel.Dock="Right"  HorizontalAlignment="Center"/>
        </DockPanel>
        <Separator DockPanel.Dock="Top"/>
        <Grid x:Name="grid" DockPanel.Dock="Top">
        </Grid>
    </DockPanel>
</UserControl>
